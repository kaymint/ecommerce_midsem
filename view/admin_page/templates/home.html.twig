                                    <li><a href="#" class="disabled">&laquo;</a></li>
                                    {% else %}
                                        <li><a href="home.php?page={{ page - 1  }}" class="disabled">&laquo;</a></li>
                                    {% endif %}

                                    {% for i in page..page+3 %}
                                        {% if i >= 1 and i <= totalPages %}
                                            <li><a href="home.php?page={{ i }}">{{ i }}</a></li>
                                        {% endif %}
                                    {% endfor %}

                                    {% if page == totalPages %}
                                        <li><a href="" class="disabled">&raquo;</a></li>
                                        {% else %}
                                            <li><a href="home.php?page={{ page + 1 }}" class="disabled">&raquo;</a></li>
                                    {% endif %}
                                {% endif %}
                            </ul>
                        </div>
