                                        </a>
                                    </td>
                                    <td>{{ x.name }}</td>
                                    <td>{{ x.brand_name }}</td>
                                    <td>{{ x.category }}</td>
                                    <td>{{ x.cost }}</td>
                                    <td>{{ x.onhand }}</td>
                                </tr>
